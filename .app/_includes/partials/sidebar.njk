{% from 'macros/sidebar-tree.njk' import sidebarTree %}

<aside class="stack">
  <h2 class="visually-hidden">Navigation</h2>

  <nav
    class="nav-section stack"
    aria-labelledby="app:sidebar:nav"
  >
    <h3
      id="app:sidebar:nav"
      class="visually-hidden">Main</h3
    >
    <ul
      class="nav-list stack"
      role="list"
      aria-labelledby="app:sidebar:nav"
    >
      <li>
        <a
          class="nav-list__link grid"
          href="/"
          {{ '/' | ariaCurrent }}
          data-type="icon-link"
        >
          {{ 'home' | feather | safe }}
          {% set home = (collections._notes | home) %}
          <span>{{ home.data.title if home else 'Home' }}</span>
        </a>
      </li>
      <li>
        <a
          class="nav-list__link grid"
          href="/notes/"
          {{ '/notes/' | ariaCurrent }}
          data-type="icon-link"
        >
          {{ 'file-text' | featherRef | safe }}
          <span>Notes</span>
        </a>
      </li>
      {% if collections.tags.length %}
        <li>
          <a
            class="nav-list__link grid"
            href="/tags/"
            {{ '/tags/' | ariaCurrent }}
            data-type="icon-link"
          >
            {{ 'hash' | featherRef | safe }}
            <span>Tags</span>
          </a>
        </li>
      {% endif %}
      <li>
        <a
          class="nav-list__link grid"
          href="/search/"
          {{ '/search/' | ariaCurrent }}
          data-type="icon-link"
        >
          {{ 'search' | feather | safe }}
          <span>Search</span>
        </a>
      </li>
    </ul>
  </nav>

  {% if app.sidebar.links.length %}
    <nav
      class="nav-section stack"
      aria-labelledby="app:sidebar:section:links"
    >
      <h3
        id="app:sidebar:section:links"
        class="nav-section__title section-label"
      >
        Socials
      </h3>
      <ul
        class="nav-list stack"
        role="list"
        aria-labelledby="app:sidebar:section:links"
      >
        {% for item in app.sidebar.links %}
          <li>
            <a
              href="{{ item.url }}"
              {{ 'target="_blank" rel="noopener"' if item.openInNewTab != false else '' }}
              class="nav-list__link grid"
              data-type="icon-link"
            >
              {{ item.icon | feather | safe }}
              <span>{{ item.label }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  {% endif %}

  <template x-if="$store.bookmarks.items.length">
    <nav
      class="nav-section stack"
      aria-labelledby="app:sidebar:section:bookmarks"
      x-cloak
    >
      <h3
        id="app:sidebar:section:bookmarks"
        class="nav-section__title section-label"
      >
        Bookmarks
      </h3>
      <ul
        class="nav-list stack"
        role="list"
        aria-labelledby="app:sidebar:section:bookmarks"
      >
        <template x-for="bkm in $store.bookmarks.items">
          <li>
            <a
              class="nav-list__link grid"
              :href="bkm"
              data-type="icon-link"
            >
              {{ 'file-text' | featherRef | safe }}
              <span x-text="$store.bookmarks.index[bkm] || bkm"></span>
            </a>
          </li>
        </template>
      </ul>
    </nav>
  </template>

  {% if collections._sidebarNotes.length %}
    <nav
      class="nav-section stack"
      aria-labelledby="app:sidebar:section:notes"
    >
      <h3
        id="app:sidebar:section:notes"
        class="nav-section__title section-label"
      >
        Notes
      </h3>
      {% for group in collections._sidebarNotes %}
        <div
          class="nav-group"
          {% if group.label %}
          x-data="collapsible('app:sidebar:section:notes:group:{{ group.id }}:list', {{ group.expanded }})"
          :data-expanded="expanded"
          {% endif %}
          data-expanded="true"
        >
          {% if group.label %}
            <h4
              class="nav-group__title"
              id="app:sidebar:section:notes:group:{{ group.id }}:title"
            >
              <button
                class="nav-group__toggle grid"
                type="button"
                data-type="icon-toggle"
                aria-controls="app:sidebar:section:notes:group:{{ group.id }}:list"
                aria-expanded="true"
                :aria-expanded="expanded"
                @click="toggle()"
              >
                {{ 'chevron-right' | feather | safe }}
                <span>{{ group.label }}</span>
              </button>
            </h4>
          {% endif %}
          <div 
            {% if group.label %}x-show="expanded"{% endif %}
            id="app:sidebar:section:notes:group:{{ group.id }}:list">
            {{ sidebarTree(group.tree, group, page) }}
          </div>
        </div>
      {% endfor %}
    </nav>
  {% endif %}

  {% if collections.tags.length %}
    <nav
      class="nav-section stack"
      aria-labelledby="app:sidebar:section:tags"
    >
      <h3
        id="app:sidebar:section:tags"
        class="nav-section__title section-label"
      >
        Tags
      </h3>
      <ul
        class="nav-list stack"
        role="list"
        data-padding-variant="3xs"
        aria-labelledby="app:sidebar:section:tags"
      >
        {% for tag in collections.tags %}
        <li>
          <a
            class="nav-list__link grid"
            href="{{ tag.url }}"
            {{ tag.url | ariaCurrent }}
            data-type="icon-link"
          >
            {{ 'hash' | featherRef | safe }}
            <span>{{ tag.title }}</span>
          </a>
        </li>
        {% endfor %}
      </ul>
    </nav>
  {% endif %}
</aside>
